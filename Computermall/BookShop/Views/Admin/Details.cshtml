@model BookShop.Models.Order
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Details</title>
    <style>
        #zhu {width:1120px;height:540px;margin:0px auto;}
         #zhong {text-align:center;}
         #zhong {margin-top:20px;}
        table {
            border-collapse: collapse;
            margin: 0 auto;
            text-align: center;
        }

            table td, table th {
                border: 1px solid #cad9ea;
                color: #666;
                height: 30px;
            }

            table thead th {
                background-color: #CCE8EB;
                width: 100px;
            }

            table tr:nth-child(odd) {
                background: #fff;
            }

            table tr:nth-child(even) {
                background: #F5FAFA;
            }
        #sidebar-menu > ul > li > a.active5 {
            color: #ffffff !important;
            background-color: #6194c1;
        }
    </style>
</head>
<body>
    <br />
    <br />
    <br />
    <br />
    <div id="zhu">
        <h3>Order details</h3>
        <hr style="border:1px dashed #000" />
        <div style="margin:8px;font-size:17px;">
            <p>Ordering User:@Model.User.UserName</p>
            <p>Ordering time:@Model.Orderdate</p>
            <p>Shipping address:@Model.Delivery.Consignee @Model.Delivery.Phone @Model.Delivery.Complete</p>
            <p>Remarks:@Model.Remark</p>
            <p>Status: @(Model.States == 1 ? "Paid" : Model.States == 2 ? "Shipped" : "Received goods")</p>
        </div>
        <h3>order details</h3>
        <hr style="border:1px dashed #000" />
        <table class="table table-striped table-bordered">
            <tr>
                <td>picture</td>
                <td>name</td>
                <td>prize</td>
                <td>number</td>
                <td>total</td>
            </tr>
            @foreach (var item in Model.OrdersDetails)
            {
                <tr>
                    <td><img src="~/image/@item.Product.Photo" style="width:50px;height:50px;" /></td>
                    <td>@item.Product.Title</td>
                    <td>@String.Format("{0:C2}", item.Product.Price)</td>
                    <td>@item.Quantity</td>
                    <td>@String.Format("{0:C2}", item.Quantity * item.Product.Price)</td>
                </tr>
                <tr>
                    <td colspan="6">total@String.Format("{0:C2}", Model.Total)</td>
                </tr>
            }
        </table>
        <p style="font-size:15px;margin-left:10px;">
            @Html.ActionLink("Return to List", "Ding")
        </p>
    </div>
</body>
</html>
