@model BookShop.Models.User
@{
    Layout = "~/Views/Shared/_LayoutShou.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ren</title>
    <style>
        body {
            background-image: url('../../image/QQ图片20220608223926.jpg');
            background-repeat: space;
        }
        #zong {
            width: 100%;
            height: 400px;
            
            margin-top: 120px;
        }
        #xin, .xi {
            width: 100px;
            margin-left:680px;
        }
        #xin {
            width: 500px;
            height: 400px;
            border: 1px solid #000000;
            border-radius:5px;
            font-size: 20px;
            text-align: left;
        }
        .xi {
            border-top: 1px solid #000000;
            border-left: 1px solid #000000;
            border-right: 1px solid #000000;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
            text-align:center;
        }
        .nei {
            width: 450px;
            height: 200px;
            margin-left: 25%;
            margin-top: 15%;
        }
        .nei div{
            margin-top:15px;
        }
    </style>
</head>
<body>
    <div id="zong"> 
        <div class="xi">
            <h3>INFO</h3>
        </div>
        <div id="xin">
            <div class="nei">
                <div>
                    <span>Account:</span>
                    <span>
                        @Model.UserName
                    </span>

                </div>
                <div>
                    <span>User name:</span>
                    <span>
                        @Model.Nick
                    </span>
                </div>
                <div>
                    <span>Pass word:</span>
                    <span>
                        @Model.Pwd
                    </span>
                </div>
                <div>
                    <span>Mail box:</span>
                    <span>
                        @Model.Email"
                    </span>
                </div>
                <div>
                    <span>
                        Recipient Name:
                    </span>
                    <span>
                        &nbsp;&nbsp;
                        @Model.Delivery.Consignee
                    </span>
                </div>
                <div>
                    <span>Address:</span>
                    <span>
                        &nbsp;&nbsp;
                        @Model.Delivery.Complete

                    </span>
                </div>
                <div>
                    <span>cell-phone number </span>
                    <span>
                        &nbsp;&nbsp;
                        @Model.Delivery.Phone
                    </span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
