@model List<BookShop.Models.News>
@{
    Layout = "~/Views/Shared/_LayoutShou.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/Gril.css" rel="stylesheet" />
    <style>
/*        #menu ul li:nth-child(2) a {
